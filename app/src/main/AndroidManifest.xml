<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.warhammer40kdicecalculator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Warhammer40kDiceCalculator"
        tools:targetApi="31">
        <activity
            android:name=".UnitSelection"
            android:exported="false" />
        <activity
            android:name=".Weapon_Popup"
            android:exported="false" />
        <activity
            android:name=".StatisticActivity"
            android:exported="false" />
        <activity
            android:name=".activity_popup"
            android:exported="false" />
        <activity
            android:name=".SavedMatchupsActivity"
            android:exported="false" />
        <activity
            android:name=".SkaDeletas"
            android:exported="false"
            android:label="@string/title_activity_saved_matchups"
            android:theme="@style/Theme.Warhammer40kDiceCalculator.NoActionBar" />
        <activity
            android:name=".CompareActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>