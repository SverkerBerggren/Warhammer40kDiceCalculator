<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayoutModelPopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_popup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#AA4C4C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.85">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NameOfModel/Unit"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4" />

        <Button
            android:id="@+id/SaveModelPopup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintWidth_percent="0.4" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:onClick="ClosePopup"
            android:text="Cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintWidth_percent="0.4" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layoutDirection="inherit"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintWidth_percent="0.4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weapon Skill"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <EditText
                    android:id="@+id/WeaponSkillModelPopup"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:rotation="180"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ballistic Skill"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <EditText
                    android:id="@+id/BallisticSkillModelPopup"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton14"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:rotation="180"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strength"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <EditText
                    android:id="@+id/StrengthModelPopup"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton15"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:rotation="180"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toughness"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <EditText
                    android:id="@+id/ToughnessModelPopup"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton16"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:rotation="180"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wounds"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton10"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <EditText
                    android:id="@+id/WoundsModelPopup"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton17"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:rotation="180"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attacks"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton11"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <EditText
                    android:id="@+id/AttacksModelPopup"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton18"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:rotation="180"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saves"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton12"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <EditText
                    android:id="@+id/ArmorSaveModelPopup"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton19"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:rotation="180"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invunerable saves"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton13"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <EditText
                    android:id="@+id/InvSaveModelPopup"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton20"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:rotation="180"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>